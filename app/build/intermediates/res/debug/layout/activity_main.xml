<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <FrameLayout
        android:id="@+id/mFrameLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <android.support.design.widget.CoordinatorLayout xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/tabanim_maincontent"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <android.support.design.widget.AppBarLayout
                    android:id="@+id/tabanim_appbar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

                    <android.support.v7.widget.Toolbar
                        android:id="@+id/tabanim_toolbar"
                        android:layout_width="match_parent"
                        android:layout_height="?attr/actionBarSize"
                        android:background="@drawable/mtr_bg"
                        app:layout_scrollFlags="scroll|enterAlways"
                        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />


                </android.support.design.widget.AppBarLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/tabanim_appbar">

                    <fragment
                        android:id="@+id/map"
                        android:name="com.google.android.gms.maps.MapFragment"
                        android:layout_width="match_parent"
                        android:layout_height="300dp"
                        android:layout_margin="3dp" />

                    <FrameLayout
                        android:id="@+id/fragment_container"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        tools:context="io.codeguy.comehere.MainActivity"
                        tools:ignore="MergeRootFrame" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@id/map">


                        <TextView
                            android:id="@+id/text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Status"
                            android:textSize="22sp"
                            android:textStyle="bold" />


                        <ImageView
                            android:id="@+id/imageView17"
                            android:layout_width="153dp"
                            android:layout_height="153dp"
                            android:layout_marginLeft="23dp"
                            android:layout_marginStart="23dp"
                            android:paddingLeft="16dp"
                            android:src="@drawable/pending"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@+id/response_num"
                            android:layout_toEndOf="@+id/response_num" />

                        <TextView
                            android:id="@+id/textView7"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignEnd="@+id/imageView17"
                            android:layout_alignRight="@+id/imageView17"
                            android:layout_alignTop="@+id/textView8"
                            android:layout_marginEnd="56dp"
                            android:layout_marginRight="56dp"
                            android:text="5"
                            android:textColor="#ffffff"
                            android:textSize="50dp" />
                        <!--<ListView-->
                        <!--android:id="@+id/listview"-->
                        <!--android:layout_width="match_parent"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:layout_below="@id/text" />-->

                        <ImageView
                            android:id="@+id/imageView18"
                            android:layout_width="132dp"
                            android:layout_height="132dp"
                            android:layout_marginEnd="23dp"
                            android:layout_marginRight="23dp"
                            android:src="@drawable/responded"
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentEnd="true" />

                        <TextView
                            android:id="@+id/textView8"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="48dp"
                            android:layout_marginTop="50dp"
                            android:text="9"
                            android:textColor="#ffffff"
                            android:textSize="50dp"
                            android:layout_centerVertical="true"
                            android:layout_alignRight="@+id/imageView18"
                            android:layout_alignEnd="@+id/imageView18" />

                        <TextView
                            android:id="@+id/response_num"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </RelativeLayout>


                </RelativeLayout>
            </RelativeLayout>

        </android.support.design.widget.CoordinatorLayout>


    </FrameLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/drawer_header"
        app:menu="@menu/drawer" />

</android.support.v4.widget.DrawerLayout><!-- From: file:/Users/SILVER/Documents/CodeGuy/ComeHere/app/src/main/res/layout/activity_main.xml -->