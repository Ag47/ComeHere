<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="2dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginBottom="5dp">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="144dp"
        android:background="#ffffff">

        <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/result_product_image"
            android:layout_width="185dp"
            android:layout_height="140dp"
            android:layout_marginTop="3dp"
            android:src="@drawable/shopper1"
            android:scaleType="centerCrop"/>

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="230dp"
            android:layout_height="147dp"
            android:src="@drawable/tri_1"
            android:layout_marginTop="0dp"/>

        <Button
            android:id="@+id/btn_share"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_marginLeft="186dp"
            android:layout_marginTop="109dp"
            android:background="#f5f4f4"
            android:stateListAnimator="@null"
            android:paddingRight="10dp"
            android:text="Share"
            android:textColor="#5e5e5f"
            android:textSize="14dp" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="62dp"
            android:layout_height="40dp"
            android:layout_marginLeft="139dp"
            android:layout_marginTop="109dp"
            android:src="@drawable/gray_tri" />


        <Button
            android:id="@+id/btn_view"
            android:layout_width="95dp"
            android:layout_height="40dp"
            android:layout_marginLeft="266dp"
            android:layout_marginTop="109dp"
            android:background="#1c73de"
            android:stateListAnimator="@null"
            android:text="View"
            android:textColor="#fcfcff"
            android:textSize="14dp" />

        <ImageView
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_marginLeft="219dp"
            android:layout_marginTop="109dp"
            android:src="@drawable/blue_tri" />

        <TextView
            android:id="@+id/product_result_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="19dp"
            android:layout_toEndOf="@+id/imageView6"
            android:text="Name"
            android:textColor="#5e5e5f" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/product_result_name"
            android:layout_centerVertical="true"
            android:text="Shopper Avaliable: "
            android:textColor="#5e5e5f" />
    </RelativeLayout>
</android.support.v7.widget.CardView>
