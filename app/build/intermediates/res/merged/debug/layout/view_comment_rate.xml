<!--This  layout is in the  product detail view, which contain  view number , comment  number and rating-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:layout_weight="0.3"
        android:background="#9469B2"
        android:text="Like numbers"

        >
        <!--android:background="#884EB2"-->

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="5dp"
            android:src="@drawable/ic_trending_up_white_48dp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView2"
            android:layout_centerHorizontal="true"
            android:text="192,252"
            android:textColor="#fff0ff"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Views"
            android:textColor="#fff0ff"
            android:textSize="11dp"
            android:layout_below="@+id/textView5"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="-3dp"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:layout_marginRight="3dp"
        android:layout_weight="0.33"
        android:background="#7F98C1">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_above="@+id/comment"
            android:layout_alignParentStart="true"
            android:src="@drawable/ic_comment_white_48dp" />

        <TextView
            android:id="@+id/comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:text="482"
            android:textColor="#fff0ff"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/commentText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="8dp"
            android:text="Comment"
            android:textColor="#fff0ff"
            android:textSize="11dp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:layout_marginRight="3dp"
        android:layout_weight="0.3"
        android:background="#7EABB5">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_above="@+id/comehere_rate"
            android:layout_alignParentStart="true"
            android:src="@drawable/ic_favorite_border_white_48dp" />

        <TextView
            android:id="@+id/comehere_rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:text="1080"
            android:textColor="#fff0ff"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/comehere_rate_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="8dp"
            android:text="ComeHere"
            android:textColor="#fff0ff"
            android:textSize="11dp" />

    </RelativeLayout>

</LinearLayout>
